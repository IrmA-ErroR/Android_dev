<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreadActivity">

    <LinearLayout
        android:id="@+id/threadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <EditText
            android:id="@+id/totalPairsEditText"
            android:layout_width="370dp"
            android:layout_height="65dp"
            android:hint="Общее количество пар"
            android:inputType="number" />

        <EditText
            android:id="@+id/studyDaysEditText"
            android:layout_width="370dp"
            android:layout_height="65dp"
            android:layout_marginTop="12dp"
            android:hint="Количество учебных дней"
            android:inputType="number" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рассчитать"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация о потоке"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>